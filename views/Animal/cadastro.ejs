<script src="/js/Animal/cadastro.js"></script>
<div>
    <h1>Cadastrar animal</h1>
</div>

<div>
    <form>
        <div class="form-group">
            <label for="inputNome">Nome</label>
            <input type="text" class="form-control" id="inputNome">
        </div>
        <div class="form-group">
          <label for="inputDescricao">Descrição</label>
          <input type="text" class="form-control" id="inputDescricao">
        </div>
        <div class="form-group">
            <label for="inputImagem">Imagem do Animal</label>
            <input class="form-control" id="inputImagem" type="file" >
          </div>
          <div class="form-group" id="previaImagem" style="display:none;">
            <label>Prévia da imagem:</label><br>
            <img id="imgPrevia" width="100" />
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="selDisponivel" name="selDisponivel">
            <label class="form-check-label" for="selDisponivel">
                Disponível
            </label>
        </div>
        <div class="form-group">
          <label for="selTipo">Tipo</label>
          <select class="form-control" id="selTipo">
            <option value="0">--Selecione--</option>
            <% for(let i = 0; i<listaTipos.length; i++) { %>
                <option value="<%=listaTipos[i].tipoId%>"><%= listaTipos[i].tipoNome %></option>
            <% } %>                 
          </select>
        </div>
        <div style="margin-top: 50px;">
            <button class="btn btn-primary" type="button" id="btnGravar">Gravar</button>
            <a href="" class="btn btn-default">Voltar</a>
        </div>
      </form>
</div>